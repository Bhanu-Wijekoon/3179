{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Anime Rating Bubble Graph",
    "width": 800,
    "height": 600,
    "data": {
      "url": "https://raw.githubusercontent.com/Bhanu-Wijekoon/3179/main/anime.csv",
      "format": {"type": "csv"}
    },
    "config": {
      "font": "Gill Sans",
      "axis": {
        "labelFontSize": 12,
        "labelFontWeight": "bold",
        "titleFontSize": 14,
        "titleFontWeight": "bold"
      },
      "legend": {
        "labelFontSize": 12,
        "labelFontWeight": "normal",
        "titleFontSize": 14,
        "titleFontWeight": "bold"
      },
      "title": {
        "fontSize": 20,
        "fontWeight": 900
      }
    },
    "transform": [
      {
        "filter": "datum.Members > 0 && datum.Score > 0"
      },
      {
        "calculate": "toNumber(datum.Members)",
        "as": "Members"
      },
      {
        "calculate": "toNumber(datum.Score)",
        "as": "Score"
      },
      {
        "calculate": "datum.Rating ? datum.Rating : 'Unknown'",
        "as": "Rating"
      },
      {
        "filter": {"param": "RatingSelection"}
      }
    ],
    "params": [
      {
        "name": "RatingSelection",
        "select": {
          "type": "point",
          "fields": ["Rating"]
          
        },"bind": "legend"
      }
    ],
    "mark": "circle",
    "encoding": {
      "x": {
        "field": "Score",
        "type": "quantitative",
        "axis": {"title": "User Score Average for Anime Series"},
        "scale": {"zero": false}
      },
      "y": {
        "field": "Members",
        "type": "quantitative",
        "axis": {"title": "Members in Anime Community"},
        "scale": {"type": "log"}
      },
      "color": {
        "field": "Rating",
        "type": "nominal",
        "scale": {
          "domain": [
            "G - All Ages",
            "PG - Children",
            "PG-13 - Teens 13 or older",
            "R - 17+ (violence & profanity)",
            "R+ - Mild Nudity",
            "Rx - Hentai",
            "Unknown"
          ],
          "range": [
            "#a7de83",
            "#4b633b",
            "#2c3b23",
            "#e491a6",
            "#96384f",
            "#733b73",
            "#808080"
          ]
        },
        "legend": {"title": "Rating"}
      },
      "size": {
        "field": "Members",
        "type": "quantitative",
        "scale": {"type": "sqrt", "range": [10, 1000]},
        "legend": {"title": "Members for Anime"}
      },
      "tooltip": [
        {"field": "Name", "type": "nominal"},
        {"field": "Avg. Rating", "type": "nominal"},
        {"field": "Avg. Score", "type": "quantitative"},
        {"field": "Members in community", "type": "quantitative", "format": ","}
      ]
    }
  }
  
