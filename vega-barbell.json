{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Completed vs Dropped Shows by Genre",
    "data": {
      "url": "https://raw.githubusercontent.com/Bhanu-Wijekoon/3179/main/anime.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "calculate": "split(datum.Genres, ', ')",
        "as": "GenresArray"
      },
      {
        "flatten": ["GenresArray"],
        "as": ["Genre"]
      },
      {
        "fold": ["Completed", "Watching", "On-Hold", "Dropped"],
        "as": ["Status", "Count"]
      },
      {
        "aggregate": [
          {"op": "sum", "field": "Count", "as": "TotalCount"}
        ],
        "groupby": ["Genre", "Status"]
      },
      {
        "pivot": "Status",
        "value": "TotalCount",
        "groupby": ["Genre"]
      },
      {
        "calculate": "min(datum.Completed, datum.Dropped)",
        "as": "CountMin"
      },
      {
        "calculate": "max(datum.Completed, datum.Dropped)",
        "as": "CountMax"
      }
    ],
    "layer": [
      {
        "mark": "rule",
        "encoding": {
          "x": {
            "field": "Genre",
            "type": "nominal",
            "axis": {"labelAngle": -45}
          },
          "y": {
            "field": "CountMin",
            "type": "quantitative",
            "title": "Number of Users"
          },
          "y2": {"field": "CountMax"},
          "color": {"value": "gray"},
          "tooltip": [
            {"field": "Genre", "type": "nominal"},
            {"field": "Completed", "type": "quantitative", "title": "Completed Users"},
            {"field": "Dropped", "type": "quantitative", "title": "Dropped Users"}
          ]
        }
      },
      {
        "transform": [
          {"calculate": "'Completed'", "as": "Status"}
        ],
        "mark": {"type": "point", "filled": true, "color": "blue"},
        "encoding": {
          "x": {"field": "Genre", "type": "nominal"},
          "y": {"field": "Completed", "type": "quantitative"},
          "color": {
            "field": "Status",
            "type": "nominal",
            "scale": {
              "domain": ["Completed", "Dropped"],
              "range": ["blue", "red"]
            },
            "legend": {"title": "Status"}
          },
          "tooltip": [
            {"field": "Genre", "type": "nominal"},
            {"field": "Status", "type": "nominal", "title": "Status"},
            {
              "field": "Completed",
              "type": "quantitative",
              "title": "Completed Users"
            }
          ]
        }
      },
      {
        "transform": [
          {"calculate": "'Dropped'", "as": "Status"}
        ],
        "mark": {"type": "point", "filled": true, "color": "red"},
        "encoding": {
          "x": {"field": "Genre", "type": "nominal"},
          "y": {"field": "Dropped", "type": "quantitative"},
          "tooltip": [
            {"field": "Genre", "type": "nominal"},
            {"field": "Status", "type": "nominal", "title": "Status"},
            {
              "field": "Dropped",
              "type": "quantitative",
              "title": "Dropped Users"
            }
          ]
        }
      },
      {
        "transform": [
          {
            "aggregate": [{"op": "mean", "field": "Completed", "as": "AvgCompleted"}]
          }
        ],
        "mark": {
          "type": "rule",
          "color": "blue",
          "strokeWidth": 2,
          "strokeDash": [4, 4]
        },
        "encoding": {
          "y": {
            "field": "AvgCompleted",
            "type": "quantitative"
          }
        }
      },
      {
        "transform": [
          {
            "aggregate": [{"op": "mean", "field": "Dropped", "as": "AvgDropped"}]
          }
        ],
        "mark": {
          "type": "rule",
          "color": "red",
          "strokeWidth": 2,
          "strokeDash": [4, 4]
        },
        "encoding": {
          "y": {
            "field": "AvgDropped",
            "type": "quantitative"
          }
        }
      }
    ]
  }
  